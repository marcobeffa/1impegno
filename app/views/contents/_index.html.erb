<% @attivo = "inline-block p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300"%>
<%= render 'shared/nav' %>
<div data-controller="contentdata" data-content-data="<%= @data %>">
