    <h1 class="font-bold text-4xl">Modifica Contenuto</h1>
  <% else%>
    <h1 class="font-bold text-4xl">Modifica  <%= params[:tipo] %></h1>
  <% end %>
  <%= render "form", content: @content %>
  <div class="m-2">
    <%= link_to "<-", contents_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Mostra", @content, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
